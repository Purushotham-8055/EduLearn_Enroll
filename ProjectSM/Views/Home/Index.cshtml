<hr />
<div id="intro" class="bg-image shadow-2-strong">
    <div class="mask d-flex align-items-center h-100" id="content" style="background-color: rgba(0, 0, 0, 0.8); bottom:1%;">
        <div class="container">

            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Index" style="color:white;">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group" >
                            <label asp-for="Admin_id" class="control-label">Admin ID</label>
                            <input asp-for="Admin_id" class="form-control" />
                            <span asp-validation-for="Admin_id" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Ad_Password" class="control-label">Password</label>
                            <input asp-for="Ad_Password" class="form-control" />
                            <span asp-validation-for="Ad_Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Submit" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
